{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/TRaSH-Guides/Guides/master/schemas/sonarr-cf.schema.json",
  "type": "object",
  "properties": {
    "trash_id": {
      "$ref": "base-cf.schema.json#/defs/trash_id"
    },
    "trash_scores": {
      "$ref": "base-cf.schema.json#/defs/trash_scores"
    },
    "trash_regex": {
      "$ref": "base-cf.schema.json#/defs/trash_regex"
    },
    "trash_description": {
      "$ref": "base-cf.schema.json#/defs/trash_description"
    },
    "name": {
      "$ref": "base-cf.schema.json#/defs/name"
    },
    "includeCustomFormatWhenRenaming": {
      "type": "boolean"
    },
    "specifications": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "specifications/release-title-spec.json" },
          { "$ref": "specifications/language-spec.json" },
          { "$ref": "specifications/indexer-flag-spec.json" },
          { "$ref": "specifications/source-spec.json" },
          { "$ref": "specifications/resolution-spec.json" },
          { "$ref": "specifications/size-spec.json" },
          { "$ref": "specifications/release-group-spec.json" },
          { "$ref": "specifications/release-type-spec.json" }
        ]
      },
      "minItems": 1
    }
  },
  "required": [
    "trash_id",
    "name",
    "includeCustomFormatWhenRenaming",
    "specifications"
  ],
  "additionalProperties": false
}
