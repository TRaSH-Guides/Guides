{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/TRaSH-Guides/Guides/master/schemas/base-cf.schema.json",
  "defs": {
    "trash_id": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{32}$"
    },
    "trash_scores": {
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "type": "integer",
          "not": {
            "const": 0
          }
        }
      },
      "minProperties": 1
    },
    "trash_regex": {
      "type": "string",
      "format": "uri"
    },
    "trash_description": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "baseSpecification": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/defs/name"
        },
        "negate": {
          "type": "boolean"
        },
        "required": {
          "type": "boolean"
        }
      },
      "required": ["name", "negate", "required"]
    }
  }
}
