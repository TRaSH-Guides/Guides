{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/TRaSH-Guides/Guides/master/schemas/specifications/release-type-spec.json",
  "allOf": [
    { "$ref": "../base-cf.schema.json#/defs/baseSpecification" },
    {
      "properties": {
        "implementation": {
          "const": "ReleaseTypeSpecification"
        },
        "fields": {
          "type": "object",
          "properties": {
            "value": {
              "type": "integer",
              "enum": [0, 1, 2, 3]
            }
          },
          "required": ["value"],
          "additionalProperties": false
        }
      },
      "required": ["implementation", "fields"]
    }
  ]
}
