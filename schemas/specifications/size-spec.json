{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/TRaSH-Guides/Guides/master/schemas/specifications/size-spec.json",
  "allOf": [
    { "$ref": "../base-cf.schema.json#/defs/baseSpecification" },
    {
      "properties": {
        "implementation": {
          "const": "SizeSpecification"
        },
        "fields": {
          "type": "object",
          "properties": {
            "min": {
              "type": "integer"
            },
            "max": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["min", "max"],
          "additionalProperties": false
        }
      },
      "required": ["implementation", "fields"]
    }
  ]
}
