{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/TRaSH-Guides/Guides/master/schemas/specifications/resolution-spec.json",
  "allOf": [
    { "$ref": "../base-cf.schema.json#/defs/baseSpecification" },
    {
      "properties": {
        "implementation": {
          "const": "ResolutionSpecification"
        },
        "fields": {
          "type": "object",
          "properties": {
            "value": {
              "type": "integer",
              "enum": [360, 480, 540, 576, 720, 1080, 2160]
            }
          },
          "required": ["value"],
          "additionalProperties": false
        }
      },
      "required": ["implementation", "fields"]
    }
  ]
}
